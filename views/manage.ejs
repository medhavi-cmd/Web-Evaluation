<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Manage Transactions - Cryptin</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    .transaction-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      color: white;
    }
    .transaction-table th, .transaction-table td {
      border: 1px solid #444;
      padding: 10px;
      text-align: left;
    }
    .transaction-table th {
      background-color: #222;
    }
    .btn-action {
      padding: 5px 10px;
      margin: 0 5px;
      cursor: pointer;
      border: none;
      border-radius: 3px;
    }
    .btn-edit { background-color: #f0ad4e; color: white; }
    .btn-delete { background-color: #d9534f; color: white; }
    
    /* Modal styles */
    .modal {
      display: none; 
      position: fixed; 
      z-index: 1; 
      left: 0;
      top: 0;
      width: 100%; 
      height: 100%; 
      overflow: auto; 
      background-color: rgba(0,0,0,0.8); 
    }
    .modal-content {
      background-color: #222;
      margin: 15% auto; 
      padding: 20px;
      border: 1px solid #888;
      width: 80%; 
      max-width: 500px;
      color: white;
    }
    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
    }
    .close:hover,
    .close:focus {
      color: white;
      text-decoration: none;
      cursor: pointer;
    }
    .modal input {
        width: 100%;
        padding: 8px;
        margin: 5px 0;
        background: #333;
        border: 1px solid #555;
        color: white;
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <main>
    <div class="container" style="padding: 50px;">
      <h2>Manage Transactions</h2>
      <div id="transaction-list">
        <table class="transaction-table">
          <thead>
            <tr>
              <th>Date</th>
              <th>Type</th>
              <th>Asset</th>
              <th>Quantity</th>
              <th>Price</th>
              <th>Total</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="transactions-body">
            <!-- Rows will be populated by JS -->
          </tbody>
        </table>
      </div>
    </div>
  </main>

  <!-- Edit Modal -->
  <div id="editModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h3>Edit Transaction</h3>
      <form id="editForm">
        <input type="hidden" id="editId">
        <label>Quantity</label>
        <input type="number" id="editQuantity" step="any" required>
        <label>Price</label>
        <input type="number" id="editPrice" step="any" required>
        <button type="submit" class="generate" style="margin-top: 10px;">Save Changes</button>
      </form>
    </div>
  </div>

  <%- include('partials/footer') %>
  <script src="/js/manage.js"></script>
</body>
</html>
