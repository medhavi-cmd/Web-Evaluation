      <form>
        <label>Select Counterparty</label>
        <select>
          <option>Luis Maria Ruiz</option>
        </select>

        <label>Quantity</label>
        <input type="number" value="1">

        <label>Asset</label>
        <select>
          <option>BTC</option>
        </select>

        <label>Amount</label>
        <input type="text" value="29,000.00">

        <label>Asset</label>
        <select>
          <option>USDC</option>
        </select>

        <label>This order expires in</label>
        <input type="date" value="2022-06-10">

        <button type="submit" class="generate">GENERATE ORDER</button>
      </form>
    </div>
  </main>

  <%- include('partials/footer') %>

  <script src="/js/common.js"></script>
  <script src="/js/sell.js"></script>
